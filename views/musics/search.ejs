<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="search-result mx-auto w-75">
      <h4 id="searchResultFor">
        <small class="text-muted">Search results for</small>
        <%= search %>
      </h4>
      <ul class="list-group">
        <li class="list-group-item">
          <div class="tracksText">T R A C K S</div>
          <div class="text-right">
            <a href="/musics/search?search=<%=search %>&see=seeAll"
              >See all ></a
            >
          </div>
        </li>
        <!-- prettier-ignore -->
        <% result.forEach((element, index) => { %>
        
      <% 
        if(see != "seeAll") {
            if(index <= 9) { 
      %>
        <li class="list-group-item">
          <h4 class="track-name">
            <a href="/musics/lyrics/<%=element.track.commontrack_id %>"
              ><%= element.track.track_name %>
            </a>
          </h4>
          <%= element.track.artist_name %>
        </li>
        <!-- prettier-ignore -->
        <%  
            }
        } else {
      %>
        <li class="list-group-item">
          <h4 class="track-name">
            <a href="/musics/lyrics/<%=element.track.commontrack_id %>"
              ><%= element.track.track_name %>
            </a>
          </h4>
          <%= element.track.artist_name %>
        </li>
        <!-- prettier-ignore -->
        <% } %> 
      <% }) %>
      </ul>
    </div>
  </body>
</html>
